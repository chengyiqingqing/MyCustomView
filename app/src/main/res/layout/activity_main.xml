<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:toogleview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <!--第二步：全类名引用这些属性
        （第三步，在自定义控件的构造方法里通过Java代码获取它）-->
    <com.wenwen.mycustomview.AttriToggleViewListener
        android:id="@+id/tv_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        toogleview:switch_background="@drawable/switch_background"
        toogleview:slide_button="@drawable/slide_button"
        toogleview:switch_state="true"
        />

</RelativeLayout>

